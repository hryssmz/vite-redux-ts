{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "ts-node": {
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./types"]
    }
  },
  "include": ["src", "types"]
}
